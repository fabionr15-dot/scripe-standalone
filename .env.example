# ===========================================
# Scripe Standalone - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Domain (Cloudflare)
DOMAIN=fabioprivato.org
FRONTEND_URL=https://scripe.fabioprivato.org
API_URL=https://api.scripe.fabioprivato.org

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=scripe
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=scripe
DATABASE_URL=postgresql://scripe:CHANGE_THIS_SECURE_PASSWORD@db:5432/scripe

# ===========================================
# API Keys (Required)
# ===========================================
# Google Places API - for business search
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# OpenAI API - for AI query interpretation
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Security
# ===========================================
# JWT Secret - generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here_at_least_32_characters

# CORS - allowed origins (comma-separated)
ALLOWED_ORIGINS=https://scripe.fabioprivato.org,https://api.scripe.fabioprivato.org

# ===========================================
# Stripe Payments
# ===========================================
# Stripe Secret Key - from Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key - from Stripe Dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret - from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ===========================================
# Optional Settings
# ===========================================
# Environment: development | production
ENV=production

# Enable web scrapers (optional, default: false)
# ENABLE_SCRAPERS=false

# Proxy URLs for scrapers (optional, comma-separated)
# PROXY_URLS=http://proxy1:8080,http://proxy2:8080
